{
  "name": "@odoo/o-spreadsheet",
  "version": "1.0.0",
  "description": "A spreadsheet component",
  "main": "index.js",
  "scripts": {
    "serve": "live-server --open=demo",
    "dev": "npm-run-all  build --parallel serve \"build:* -- --watch\"",
    "build:js": "tsc --target esnext --module es6 --outDir dist/js --incremental",
    "build:bundle": "rollup -c -m",
    "build": "npm run build:js && npm run build:bundle",
    "test": "jest",
    "test:watch": "jest --watch",
    "prettier": "prettier {src/*.ts,src/**/*.ts,tests/*.ts,tests/**/*.ts,doc/*.md} --write"
  },
  "browserslist": [
    "last 1 Chrome versions"
  ],
  "keywords": [
    "owl",
    "spreadsheet",
    "odoo"
  ],
  "author": "Gery Debongnie",
  "license": "LGPL-3.0-or-later",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/chart.js": "2.9.3",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.23",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "git-rev-sync": "^2.1.0",
    "jest": "^25.3.0",
    "jest-environment-jsdom": "^25.3.0",
    "live-server": "^1.2.1",
    "mockdate": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rollup": "^2.29.0",
    "ts-jest": "^25.3.1",
    "typescript": "^3.9.7",
    "y-websocket": "^1.3.5"
  },
  "prettier": {
    "printWidth": 100,
    "endOfLine": "auto"
  },
  "dependencies": {
    "@odoo/owl": "^1.0.11",
    "automerge": "^0.14.1",
    "express": "^4.17.1",
    "express-ws": "^4.0.0",
    "yjs": "^13.4.1"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "verbose": false,
    "testRegex": "(/tests/.*(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
