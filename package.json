{
  "name": "@odoo/o-spreadsheet",
  "version": "0.0.1",
  "description": "A spreadsheet component",
  "main": "index.js",
  "scripts": {
    "serve": "live-server dist --open=demo",
    "predev": "cpr demo dist/demo -o",
    "dev": "npm-run-all  build --parallel serve \"build:* -- --watch\"",
    "build:js": "tsc --target esnext --module es6 --outDir dist/js --incremental",
    "build:bundle": "rollup -c",
    "build": "npm run build:js && npm run build:bundle",
    "test": "jest",
    "test:watch": "jest --watch",
    "prettier": "prettier {src/*.ts,src/**/*.ts,tests/*.ts,tests/**/*.ts} --write"
  },
  "browserslist": [
    "last 1 Chrome versions"
  ],
  "keywords": [
    "owl",
    "spreadsheet",
    "odoo"
  ],
  "author": "Gery Debongnie",
  "license": "LGPL-3.0-or-later",
  "devDependencies": {
    "@types/jest": "^24.0.25",
    "cpr": "^3.0.1",
    "eslint": "^6.8.0",
    "git-rev-sync": "^2.0.0",
    "jest": "^24.9.0",
    "jest-environment-jsdom": "^24.9.0",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "rollup": "^1.28.0",
    "ts-jest": "^24.3.0",
    "typescript": "^3.7.4"
  },
  "prettier": {
    "printWidth": 100
  },
  "dependencies": {
    "@odoo/owl": "^1.0.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "verbose": false,
    "testRegex": "(/tests/.*(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
