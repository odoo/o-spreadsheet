{
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "check-formatting": "prettier . --check && eslint",
    "prepare": "husky install",
    "prettier": "prettier . --write",
    "test": "npm run test --workspaces",
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspace=packages/o-spreadsheet",
    "test-typecheck": "tsc --noEmit --project tsconfig.jest.json"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^2.2.0",
    "lint-staged": "^12.1.2",
    "husky": "^7.0.4",
    "prettier": "^2.8.0",
    "prettier-plugin-organize-imports": "^3.2.2"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": [
        "@swc/jest"
      ]
    },
    "verbose": false,
    "testEnvironment": "jsdom",
    "testRegex": "(packages/.*/tests/.*test)\\.ts?$",
    "workerIdleMemoryLimit": "800MB",
    "globalSetup": "<rootDir>/packages/o-spreadsheet/tests/setup/jest_global_setup.ts",
    "globalTeardown": "<rootDir>/packages/o-spreadsheet/tests/setup/jest_global_teardown.ts",
    "setupFilesAfterEnv": [
      "<rootDir>/packages/o-spreadsheet/tests/setup/jest.setup.ts"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "xmlWhitespaceSensitivity": "ignore",
    "bracketSameLine": true,
    "xmlSelfClosingSpace": false
  },
  "lint-staged": {
    "*": [
      "prettier . --write",
      "eslint --fix"
    ]
  }
}
