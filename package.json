{
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "check-formatting": "prettier . --check && eslint",
    "prepare": "husky install",
    "prettier": "prettier . --write",
    "test": "npm run test --workspaces",
    "build": "npm run build --workspaces",
    "dev": "npm-run-all --print-label bundle:dev --parallel server serve-static watch",
    "bundle:dev": "npm run bundle:dev --workspace=packages/o-spreadsheet-web",
    "server": "node tools/server/main.cjs",
    "serve-static": "live-server --open=demo --watch=build/o_spreadsheet.iife.js,build/o_spreadsheet.xml,build/o_spreadsheet.css,main.css,demo",
    "watch": "npm-run-all -p watch:*",
    "watch:bundle": "npm run bundle:iife --workspace=packages/o-spreadsheet-web",
    "watch:ts": "npm run build:js --workspaces -- --watch",
    "watch:xml": "node tools/bundle_xml/watch_xml_templates.cjs",
    "watch:scss": "node tools/bundle_scss/watch_scss_files.cjs",
    "test-typecheck": "tsc --noEmit --project tsconfig.jest.json",
    "unzipXlsx": "node tools/bundle_xlsx/unzip_xlsx_demo.cjs",
    "zipXlsx": "node tools/bundle_xlsx/zip_xlsx_demo.cjs"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^2.2.0",
    "lint-staged": "^12.1.2",
    "husky": "^7.0.4",
    "prettier": "^2.8.0",
    "prettier-plugin-organize-imports": "^3.2.2"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": [
        "@swc/jest"
      ]
    },
    "verbose": false,
    "testEnvironment": "jsdom",
    "testRegex": "(packages/.*/tests/.*test)\\.ts?$",
    "workerIdleMemoryLimit": "800MB",
    "globalSetup": "<rootDir>/packages/o-spreadsheet-web/tests/setup/jest_global_setup.ts",
    "globalTeardown": "<rootDir>/packages/o-spreadsheet-web/tests/setup/jest_global_teardown.ts",
    "setupFilesAfterEnv": [
      "<rootDir>/packages/o-spreadsheet-web/tests/setup/jest.setup.ts"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "xmlWhitespaceSensitivity": "ignore",
    "bracketSameLine": true,
    "xmlSelfClosingSpace": false
  },
  "lint-staged": {
    "*": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
