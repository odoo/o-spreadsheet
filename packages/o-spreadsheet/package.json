{
  "name": "@odoo/o-spreadsheet",
  "version": "19.1.0-alpha.3",
  "description": "Odoo Spreadsheet Library",
  "type": "module",
  "main": "dist/o-spreadsheet.iife.js",
  "browser": "dist/o-spreadsheet.iife.js",
  "module": "dist/o-spreadsheet.esm.js",
  "types": "dist/o-spreadsheet.d.ts",
  "files": [
    "dist/*.js",
    "dist/*.d.ts",
    "dist/*.xml"
  ],
  "scripts": {
    "build": "npm-run-all build:js bundle:iife \"bundle:xml -- --outDir build\" \"bundle:css -- --out build\"",
    "build:watch": "npm-run-all  --parallel build:js:watch bundle:iife:watch bundle:xml:watch bundle:css:watch",
    "build:js": "tsc --module es6 --incremental",
    "build:js:watch": "npm run build:js -- --watch",
    "bundle:iife": "rollup -c -m -- --format iife",
    "bundle:iife:watch": "npm run bundle:iife -- --watch",
    "bundle:esm": "rollup -c -m -- --format esm",
    "bundle:xml": "node tools/bundle_xml/main.cjs",
    "bundle:xml:watch": "node tools/bundle_xml/watch_xml_templates.cjs",
    "bundle:css": "node tools/bundle_css/main.cjs",
    "bundle:css:watch": "node tools/bundle_css/watch_css_files.cjs",
    "dist": "tsc --module es6 --declaration --declarationDir dist/types && rollup -c && npm run bundle:xml -- --outDir dist && npm run bundle:css -- --out dist",
    "test": "tsc --noEmit --project tsconfig.jest.json && jest",
    "monkey": "SPREADSHEET_MONKEY_COUNT=$npm_config_monkey_count jest 'tests/collaborative/collaborative_monkey_party.test.ts'"
  },
  "dependencies": {
    "@odoo/owl": "2.5.1",
    "bootstrap": "^5.3.3",
    "font-awesome": "^4.7.0",
    "rbush": "^3.0.1",
    "@odoo/o-spreadsheet-engine": "*"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.ts?$": [
        "@swc/jest"
      ]
    },
    "moduleNameMapper": {
      "^@odoo/o-spreadsheet-engine$": "<rootDir>/../o-spreadsheet-engine/src"
    },
    "verbose": false,
    "testEnvironment": "jsdom",
    "testRegex": "(/tests/.*(test|spec))\\.ts?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "workerIdleMemoryLimit": "800MB",
    "globalSetup": "<rootDir>/tests/setup/jest_global_setup.ts",
    "globalTeardown": "<rootDir>/tests/setup/jest_global_teardown.ts",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup/jest.setup.ts"
    ]
  }
}
