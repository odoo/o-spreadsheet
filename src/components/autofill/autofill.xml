<templates>
  <t t-name="o-spreadsheet-Autofill" owl="1">
    <div
      class="o-spreadsheet-autofill-handler position-absolute border border-white"
      t-on-mousedown="onMouseDown"
      t-att-style="style"
      t-on-dblclick="onDblClick">
      <t t-set="tooltip" t-value="getTooltip()"/>
      <div
        t-if="tooltip"
        class="o-spreadsheet-autofill-tooltip position-absolute border border-black bg-white p-2 pe-none text-nowrap"
        t-att-style="styleNextvalue">
        <t t-component="tooltip.component" t-props="tooltip.props"/>
      </div>
    </div>
  </t>
</templates>
