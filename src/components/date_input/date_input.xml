<templates>
  <t t-name="o-spreadsheet-DateInput">
    <input
      type="date"
      t-ref="{{refName}}"
      t-att-class="inputClass"
      t-att-id="props.id"
      t-att-placeholder="props.placeholder"
      t-on-change="save"
      t-on-blur="save"
      t-on-pointerdown="onMouseDown"
      t-on-pointerup="onMouseUp"
      t-on-keydown="onKeyDown"
      t-att-min="props.min"
      t-att-max="props.max"
      step="1"
    />
  </t>
</templates>
