<templates>
  <t t-name="o-spreadsheet.ChartFigure" owl="1">
    <div
      class="o-chart-container"
      t-ref="chartContainer"
      t-on-contextmenu.prevent.stop="onContextMenu">
      <div class="o-chart-menu">
        <div
          class="o-chart-menu-item"
          t-on-click="showMenu"
          t-ref="menuButton"
          t-on-contextmenu.prevent.stop="showMenu">
          <t t-call="o-spreadsheet.Icon.LIST"/>
        </div>
      </div>
      <ScorecardChart t-if="figureChartType === 'scorecard'" figure="props.figure"/>
      <BasicChart t-if="figureChartType === 'basicChart'" figure="props.figure"/>
      <Menu
        t-if="menuState.isOpen"
        position="menuState.position"
        menuItems="menuState.menuItems"
        onClose="() => this.menuState.isOpen=false"
      />
    </div>
  </t>
</templates>
