<templates>
  <t t-name="o-spreadsheet-FiguresContainer" owl="1">
    <div>
      <t t-foreach="getVisibleFigures()" t-as="figure" t-key="figure.id">
        <FigureComponent
          sidePanelIsOpen="this.props.sidePanelIsOpen"
          onFigureDeleted="this.props.onFigureDeleted"
          figure="figure"
        />
      </t>
    </div>
  </t>
</templates>
