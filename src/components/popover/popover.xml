<templates>
  <t t-name="o-spreadsheet-Popover">
    <t t-portal="'.o-spreadsheet'">
      <div
        class="o-popover rounded"
        t-att-class="props.class"
        t-ref="popover"
        t-on-wheel="props.onMouseWheel"
        t-on-click.stop="">
        <div class="o-popover-content" t-ref="popoverContent">
          <t t-slot="default"/>
        </div>
      </div>
    </t>
  </t>
</templates>
