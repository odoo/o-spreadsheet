<templates>
  <t t-name="o-spreadsheet-CellProtectionPreview">
    <div class="o-cp-preview p-3" t-on-click="props.onClick" t-ref="cpPreview">
      <div class="d-flex justify-content-between">
        <div class="o-cp-container d-flex flex-column">
          <div class="o-cp-preview-name fw-bold text-truncate" t-esc="this.cellProtectionRuleName"/>
          <div
            class="o-cp-preview-description text-truncate"
            t-esc="cellProtectionRuleDescription"
          />
        </div>
        <div
          class="o-cp-preview-delete d-flex align-items-center text-muted px-3"
          t-on-click.stop="deleteCellProtection">
          <t t-call="o-spreadsheet-Icon.TRASH"/>
        </div>
      </div>
    </div>
  </t>
</templates>
