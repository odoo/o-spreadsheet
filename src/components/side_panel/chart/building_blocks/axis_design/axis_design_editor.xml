<templates>
  <t t-name="o-spreadsheet-AxisDesignEditor">
    <t t-set="editor_label">Axis title</t>
    <Section class="'py-0'">
      <BadgeSelection
        choices="badgeAxes"
        onChange.bind="(value) => state.currentAxis = value"
        selectedValue="state.currentAxis"
      />
    </Section>
    <TextStyler
      text="this.getAxisTitle()"
      updateText.bind="updateAxisTitle"
      updateStyle.bind="updateAxisTitleStyle"
      label="editor_label"
      style="axisTitleStyle"
      defaultStyle="{align: 'center', color: ''}"
    />
  </t>
</templates>
