<templates>
  <t t-name="o-spreadsheet.ChartTitle">
    <Section class="'o-chart-title'" title="props.name">
      <StandaloneComposer
        t-if="props.titleMode === 'dynamic'"
        composerContent="props.title"
        onConfirm.bind="updateTitle"
        defaultRangeSheetId="env.model.getters.getActiveSheetId()"
        placeholder="props.placeholder"
      />
      <input
        t-else=""
        type="text"
        class="o-input"
        t-att-value="props.title"
        t-on-change="(ev) => this.updateTitle(ev.target.value)"
        t-att-placeholder="props.placeholder"
      />
      <TextStyler
        style="props.style"
        updateStyle="props.updateStyle"
        defaultStyle="props.defaultStyle"
        hasHorizontalAlign="true"
      />
    </Section>
  </t>
</templates>
