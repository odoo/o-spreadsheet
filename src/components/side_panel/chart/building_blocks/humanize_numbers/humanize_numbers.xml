<templates>
  <t t-name="o-spreadsheet-ChartHumanizeNumbers">
    <Checkbox
      name="'humanizeNumbers'"
      label.translate="Use compact format"
      title="title"
      value="props.definition.humanize ?? true"
      onChange="(humanize) => props.updateChart(this.props.chartId, { humanize })"
    />
  </t>
</templates>
