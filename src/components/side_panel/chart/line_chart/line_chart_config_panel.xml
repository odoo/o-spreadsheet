<templates>
  <t t-name="o-spreadsheet-LineConfigPanel">
    <div>
      <t t-set="d" t-value="def"/>
      <Section className="'pt-0'">
        <Property property="d.stacked"/>
        <Property property="d.cumulative"/>
      </Section>
      <Section title="'Data Series'" className="'o-data-series'">
        <Property property="d.dataSeries"/>
      </Section>
      <Section title="'Categories / Labels'" className="'o-data-labels'">
        <Property property="d.labelRange"/>
        <Property property="d.aggregated"/>
        <Property t-if="canTreatLabelsAsText" property="d.labelsAsText"/>
      </Section>
      <Section className="'o-use-row-as-headers'" t-if="calculateHeaderPosition()">
        <Property property="d.dataSetsHaveTitle"/>
      </Section>

      <Section t-if="errorMessages.length">
        <ValidationMessages messages="errorMessages" msgType="'error'"/>
      </Section>
    </div>
  </t>
</templates>
