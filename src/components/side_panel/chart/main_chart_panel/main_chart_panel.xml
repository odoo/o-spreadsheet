<templates>
  <t t-name="o-spreadsheet.ChartPanel" owl="1">
    <t t-if="['bar', 'line', 'pie'].includes(chartType)">
      <BasicChartPanel figure="props.figure" onCloseSidePanel="props.onCloseSidePanel"/>
    </t>
    <t t-if="chartType === 'scorecard'">
      <ScorecardChartPanel figure="props.figure" onCloseSidePanel="props.onCloseSidePanel"/>
    </t>
    <t t-if="chartType === 'gauge'">
      <GaugeChartPanel figure="props.figure" onCloseSidePanel="props.onCloseSidePanel"/>
    </t>
  </t>
</templates>
