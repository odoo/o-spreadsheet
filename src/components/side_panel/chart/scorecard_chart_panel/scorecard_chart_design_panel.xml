<templates>
  <t t-name="o-spreadsheet-ScorecardChartDesignPanel">
    <t t-set="color_up">Color Up</t>
    <t t-set="color_down">Color Down</t>
    <GeneralDesignEditor
      figureId="props.figureId"
      definition="props.definition"
      updateChart="props.updateChart"
      defaultChartTitleFontSize="defaultScorecardTitleFontSize">
      <t t-set-slot="general-extension">
        <Section class="'pt-1'" title.translate="Number formatting">
          <Checkbox
            name="'humanizeNumbers'"
            label="humanizeNumbersLabel"
            value="props.definition.humanize"
            onChange.bind="updateHumanizeNumbers"
          />
        </Section>
      </t>
    </GeneralDesignEditor>
    <SidePanelCollapsible collapsedAtInit="false" title.translate="Key value">
      <t t-set-slot="content">
        <Section class="'pt-0'" title.translate="Key description">
          <ChartTitle
            title="Key"
            updateTitle="(title) => this.updateStyle('key', 'title', title)"
            name="key_label"
            toggleItalic="(italic) => this.updateStyle('key', 'italic', italic)"
            toggleBold="(bold) => this.updateStyle('key', 'bold', bold)"
            updateAlignment="(align) => this.updateStyle('key', 'align', align)"
            updateColor="(color) => this.updateStyle('key', 'color', color)"
            style="keyStyle"
            onFontSizeChanged.bind="(size) => this.updateStyle('key', 'fontSize', size)"
          />
        </Section>
      </t>
    </SidePanelCollapsible>
    <SidePanelCollapsible collapsedAtInit="false" title.translate="Baseline">
      <t t-set-slot="content">
        <Section class="'pt-0'" title.translate="Baseline description">
          <ChartTitle
            title="Baseline"
            updateTitle="(title) => this.updateStyle('baseline', 'title', title)"
            name="baseline_label"
            toggleItalic="(italic) => this.updateStyle('baseline', 'italic', italic)"
            toggleBold="(bold) => this.updateStyle('baseline', 'bold', bold)"
            updateAlignment="(align) => this.updateStyle('baseline', 'align', align)"
            updateColor="(color) => this.updateStyle('baseline', 'color', color)"
            style="baselineStyle"
            onFontSizeChanged.bind="(size) => this.updateStyle('baseline', 'fontSize', size)"
          />
        </Section>
        <Section class="'o-chart-baseline-color pt-0'" title="colorsSectionTitle">
          <div class="d-flex align-items-center mb-2">
            <RoundColorPicker
              currentColor="props.definition.baselineColorUp"
              onColorPicked="(color) => this.setColor(color, 'baselineColorUp')"
              title="color_up"
            />
            <span class="ps-2">Color on value increase</span>
          </div>
          <div class="d-flex align-items-center">
            <RoundColorPicker
              currentColor="props.definition.baselineColorDown"
              onColorPicked="(color) => this.setColor(color, 'baselineColorDown')"
              title="color_down"
            />
            <span class="ps-2">Color on value decrease</span>
          </div>
        </Section>
      </t>
    </SidePanelCollapsible>
  </t>
</templates>
