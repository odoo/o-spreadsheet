<templates>
  <t t-name="o-spreadsheet.Checkbox">
    <label class="o-checkbox" t-attf-class="{{props.className}}">
      <input
        type="checkbox"
        t-att-name="props.name"
        t-att-checked="props.value"
        t-on-change="onChange"
        class="align-middle"
      />
      <t t-if="props.label" t-esc="props.label"/>
    </label>
  </t>
</templates>
