<templates>
  <t t-name="o_spreadsheet.Checkbox">
    <label class="o-checkbox">
      <input
        type="checkbox"
        t-att-name="props.name"
        t-att-checked="props.value"
        t-on-change="props.update"
        class="align-middle"
      />
      <t t-if="props.label" t-esc="props.label"/>
    </label>
  </t>
</templates>
