<templates>
  <t t-name="o-spreadsheet-TextInput">
    <input
      type="text"
      t-ref="{{refName}}"
      t-att-class="inputClass"
      t-att-value="props.value"
      t-att-id="props.id"
      t-att-placeholder="props.placeholder"
      t-on-change="save"
      t-on-blur="save"
      t-on-pointerdown="onMouseDown"
      t-on-pointerup="onMouseUp"
      t-on-keydown="onKeyDown"
    />
  </t>
</templates>
